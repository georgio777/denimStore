header.main-header
  .header-top
    a(href="").logo.main-header__logo.logo--black Nimes
  .header-bottom
    .search-wrapper
      input(type="search", name="Search field" placeholder="Search..").input-search.header-bottom__input-search
    .container
      .header-bottom__inner

        nav.header-bottom__nav.header-navigation
          ul.header-navigation__list
            li.header-navigation__list-item
              a.header-navigation__anchor(href="") Woman
            li.header-navigation__list-item
              a.header-navigation__anchor(href="") Man
            li.header-navigation__list-item
              a.header-navigation__anchor(href="") New

          .header-navigation__right
            button(type="button" aria-label="search" 
            onclick="document.querySelector('.input-search').focus()").search.header-navigation__search
            button(type="button" aria-label="cart").cart.header-navigation__cart

          button(type="button" aria-label="to bottom").header-navigation__to-bottom.to-bottom

          ul.header-navigation__socials
            li.header-navigation__social-item
              a.header-navigation__social-link(href="") facebook
            li.header-navigation__social-item
              a.header-navigation__social-link(href="") instagram

        .base-info
          p.base-info__tagline The quality you deserve
          p.base-info__collection-name DENIM
          button(type="button").button.base-info__button Check new collection

        .img-container.header-bottom__img-container
          img.img-container__top-img(src="img/icons/to_right.svg", alt="")
          img.img-container__bottom-img(src="img/icons/to_left.svg", alt="")
          img.img-container__main-img(src="img/matheus-ferrero-G1T-uv4n31U-unsplash.jpg", width=430 height=517 alt="collection cover")
          